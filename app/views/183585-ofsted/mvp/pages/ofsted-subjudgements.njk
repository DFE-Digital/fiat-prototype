{% extends "/183585-ofsted/mvp/layouts/trust_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite primary nav item #}
{% set navActive = "ofsted" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "subjudgements" %}


{# Custom block for the main content area of a trust page #}
{% block trustContent %}

  <h2 class="govuk-heading-l">
      Ofsted
  </h2>

{# Sub-nav to flick through data sets #}
{% include "../parts/ofsted-sub_nav.njk" %}

{# Guidance content #}
{% set ofstedSubjudgementGuidance %}
  <p class="govuk-body">
    Sub-judgement ratings are taken from a school's latest Ofsted report.
  </p>
  <p class="govuk-body">
    Download the full set of data to see historical ratings.
  </p>
  {{ govukButton({
    text: "Download all Ofsted data",
    classes: "govuk-button--secondary",
    href: "#"
  }) }}
{% endset %}

{{ govukInsetText({
  html: ofstedSubjudgementGuidance
}) }}

{# Tabs to flick through tables #}
{% include "../tables/subjudgements.njk" %}

<hr class="govuk-section-break govuk-section-break--s">

{# Sources and updates #}
{% include "/183585-ofsted/mvp/parts/sources-updates.njk" %}

{% endblock %}