{% extends "/200106-finance-docs/mvp/layouts/trust_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite side nav item #}
{% set navActive = "finance" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "statements" %}

{# Set guidance content variable #}
{% set explainerStatements %}
  <p class="govuk-body">Trusts must submit a financial statement to us every year.</p>
  <p class="govuk-body">It includes information and independent reports on:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>governance</li>
    <li>trustees</li>
    <li>balance</li>
    <li>financial activity</li>
  </ul>
  
{% endset %}

{# Custom block for the main content area of a trust page #}
{% block trustContent %}

  <h2 class="govuk-heading-l">
      Financial documents
  </h2>

  {# Sub-nav to flick through data sets #}
  {% include "../parts/finance-sub_nav.njk" %}

  <h3 class="govuk-heading-m">Financial statements</h3>

  {# What is this document #}
  {{ explainerStatements | safe }}

  {# Doc not expected guidance #}
  {% include "/200106-finance-docs/mvp/parts/explainer-notExpected.njk" %}

  <hr class="govuk-section-break govuk-section-break--m">

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

    {# List of docs #}
    {% include "/200106-finance-docs/mvp/lists/list-statements.njk" %}

    </div>
  </div>

  {# <hr class="govuk-section-break govuk-section-break--s"> #}
  <hr class="govuk-section-break govuk-section-break--m">

  {# Sources and updates #}
  {% include "/200106-finance-docs/mvp/parts/sources-updates.njk" %}

{% endblock %}