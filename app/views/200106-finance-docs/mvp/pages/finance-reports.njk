{% extends "/200106-finance-docs/mvp/layouts/trust_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite side nav item #}
{% set navActive = "finance" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "reports" %}

{# Set guidance content variable #}
{% set explainerReports %}
  <p class="govuk-body">Trusts must be scrutinised every year by an internal auditor and submit a copy of the report to us.</p>
  <p class="govuk-body">It covers:</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>financial and non-financial compliance</li>
    <li>control measures</li>
    <li>risk management</li>
    <li>recommendations for improvement</li>
  </ul>
{% endset %}

{# Set guidance for document not expected #}
{% set docNotExpected %}
  {# <p class="govuk-body">We include links to any financial documents we have received in the last 3 years.</p>
  <p class="govuk-body">If a trust <strong>does not</strong> submit a document before the deadline we show this as 'not submitted' until we receive it.</p>
  <p class="govuk-body">The deadline for submitting an internal scrutiny report is 31 March.</p>
  <p class="govuk-body">If a document <strong>could not have been</strong> submitted, for example because a trust had not formed until after that year, we say that it was 'not expected'.</p>
  <p class="govuk-body">Financial statements cover one year from 1 September to 31 August.</p> #}
  For years where a document could not have been submitted, for example because a trust had not formed yet, we say that it was ‘not expected’.
{% endset %}

{# Custom block for the main content area of a trust page #}
{% block trustContent %}

  <h2 class="govuk-heading-l">
      Financial documents
  </h2>

  {# Sub-nav to flick through data sets #}
  {% include "../parts/finance-sub_nav.njk" %}

  <h3 class="govuk-heading-m">Internal scrutiny reports</h3>

  {# What is this document #}
  {# {{ explainerReports | safe }} #}

  {# <hr class="govuk-section-break govuk-section-break--m"> #}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

    {# Why a document might not be available #}
    {# {% include "/200106-finance-docs/mvp/parts/explainer-notExpected.njk" %} #}
    {{ govukDetails({
      summaryText: 'Why we might not expect a document',
      html: docNotExpected
    }) }}

    {# Internal use only warning #}
    <div class="fiat-warning-banner-a">
      {% include "/200106-finance-docs/mvp/parts/warning-InternalOnly-finance-reports.njk" %}
    </div>

    {# List of docs #}
    {% include "/200106-finance-docs/mvp/lists/list-reports.njk" %}

    {# <hr class="govuk-section-break govuk-section-break--s"> #}
    <hr class="govuk-section-break govuk-section-break--m">

    {# Sources and updates #}
    {% include "/200106-finance-docs/mvp/parts/sourcesUpdates-reports.njk" %}

    </div>
  </div>

{% endblock %}