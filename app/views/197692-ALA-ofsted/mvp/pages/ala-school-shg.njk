{% extends "/197692-ALA-ofsted/mvp/layouts/school_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite side nav item #}
{% set navActive = "ofsted" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "shg" %}

{# Custom block for the main content area of a trust page #}
{% block schoolContent %}

  <h2 class="govuk-heading-l">
      Ofsted
  </h2>

  {# Sub-nav to flick through data sets #}
  {% include "../parts/ala-sub_nav-school.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      
    <h3 class="govuk-heading-m">Single headline grades</h3>

    {# Details #}
    {# {% include "/197692-ALA-ofsted/mvp/lists/ala-list-school-shg-details" %} #}
    
    {# No SHG guidance #}
    {% include "/197692-ALA-ofsted/mvp/parts/explainer-SHGnotAvailable.njk" %}

    {# No short inspection data guidance #}
    {% include "/197692-ALA-ofsted/mvp/parts/explainer-shortInspNotAvailable.njk" %}

    {# Table of ratings #}
    {% include "/197692-ALA-ofsted/mvp/tables/ala-table-school-shg" %}

    <hr class="govuk-section-break govuk-section-break--m">

    <p class="govuk-body"><a href="#" target="_blank">See the inspection reports at Ofsted (Opens in a new tab)</a></p>

    <hr class="govuk-section-break govuk-section-break--m">

    {{ govukButton({
      text: "Download all Ofsted data",
      classes: "govuk-button--secondary",
      href: "#"
    }) }}

    {# Sources and updates #}
    {% include "/197692-ALA-ofsted/mvp/parts/ala-component-school-sources-updates" %}

    </div>
  </div>

{% endblock %}