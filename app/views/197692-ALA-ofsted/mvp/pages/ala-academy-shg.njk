{% extends "/197692-ALA-ofsted/mvp/layouts/academy_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite side nav item #}
{% set navActive = "ofsted" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "shg" %}

{# Custom block for the main content area of a trust page #}
{% block schoolContent %}

  <h2 class="govuk-heading-l">
      Ofsted
  </h2>

  {# Sub-nav to flick through data sets #}
  {% include "../parts/ala-sub_nav-academy.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      
    <h3 class="govuk-heading-m">Single headline grades</h3>

    {# Details #}
    {# {% include "/197692-ALA-ofsted/mvp/lists/ala-list-academy-shg-details" %} #}
    <p class="govuk-body">This academy joined the trust on the <strong>11th August 2018</strong>.</p>
  
    {# No SHG guidance #}
    {% include "/197692-ALA-ofsted/mvp/parts/explainer-SHGnotAvailable.njk" %}

    {# <hr class="govuk-section-break govuk-section-break--m"> #}
  
    {# Table of ratings #}
    {% include "/197692-ALA-ofsted/mvp/tables/ala-table-academy-shg" %}

    <hr class="govuk-section-break govuk-section-break--m">

    <p class="govuk-body"><a href="#">See the inspection reports at Ofsted</a>.</p>
  
    <hr class="govuk-section-break govuk-section-break--m">

    {{ govukButton({
      text: "Download all Ofsted data",
      classes: "govuk-button--secondary",
      href: "#"
    }) }}

    {# Sources and updates #}
    {% include "/197692-ALA-ofsted/mvp/parts/ala-component-academy-sources-updates" %}

    </div>
  </div>

{% endblock %}