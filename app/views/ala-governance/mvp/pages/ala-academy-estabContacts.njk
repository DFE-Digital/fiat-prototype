{% extends "/ala-governance/mvp/layouts/academy_layout.njk" %}

{# Set sub page word to use in pageTitle (e.g. tab title) #}
{# {% set subPage = "Academies details" %} #}

{# Set an active state on the appropraite side nav item #}
{% set navActive = "contacts" %}

{# Set an active state on the appropraite secondary nav item #}
{% set subNavActive = "estab" %}

{# Custom block for the main content area of a trust page #}
{% block schoolContent %}

  <h2 class="govuk-heading-l">
      Contacts
  </h2>

  {# Sub-nav to flick through data sets #}
  {% include "../parts/ala-sub_nav-academy.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      
    <h3 class="govuk-heading-m">In this academy</h3>

    {# Internal use only #}
    <div class="fiat-warning-banner-a">
      {% include "/ala-governance/mvp/parts/ala-component-estabContacts-internalOnly-academy" %}
    </div>

    {# Contact card(s) #}
    {% include "/ala-governance/mvp/contacts/ala-card-estabContacts-academy" %}

    <hr class="govuk-section-break govuk-section-break--m">

    {# Sources and updates #}
    {% include "/ala-governance/mvp/parts/ala-component-academy-sources-updates" %}

    </div>
  </div>

{% endblock %}